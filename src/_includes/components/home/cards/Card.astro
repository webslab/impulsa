---
const { title, url } = Astro.props;
---

<style>
.card {
  width: 75%;
  height: 65svh;
  overflow: scroll;
}

@media (max-width: 768px) {
  .card {
    width: 100%;
    height: 100%;
  }
}
</style>

<div
  class="card text-center mx-auto mb-5">
  <h4 class="card-header text-center">{title}</h4>

  <div class="card-body text-start">
    <slot />
  </div>

  <div class="card-footer">
    <a href={url} class="btn btn-primary">Saber m√°s</a>
  </div>
</div>
